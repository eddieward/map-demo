<% content_for :body_content_title do %>
  <%= @place.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @place.title %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @place.description %>
    </p>
  </section>
  <section>
    <h1>Address</h1>
    <p>
      <%=raw @place.address %>
    </p>
  </section>
  <section>
    <h1>Latitude</h1>
    <p>
      <%=raw @place.latitude %>
    </p>
  </section>
  <section>
    <h1>Longitude</h1>
    <p>
      <%=raw @place.longitude %>
    </p>
  </section>
  <section>
    <h1>Image</h1>
    <p>
      <%= image_fu @place.image, nil %>
    </p>
  </section>
  <section>
    <h1>Show</h1>
    <p>
      <%=raw @place.show %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="places">
      <% @places.each do |place| %>
        <li>
          <%= link_to place.title, refinery.places_place_path(place) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
